<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <% counter = 1 %>
  <%= f.fields_for :notes do |note| %>
    <div>
    <%=note.label :content %>
    <%= note.text_field :content, {id: "song_notes_#{counter}"} %>
    <% counter += 1 %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>
